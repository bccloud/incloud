  <ul>
    <% for (var i = 0; i < keys.length; i++) {%>
    <li>
        <dl>
          <dt><%- $('名称') %></dt>
          <dd><%- keys[i].name || ""%></dd>
          <dt><%- $('SSH公钥') %></dt>
          <dd><div style='width:100px'><%- keys[i].key %></div></dd>
        </dl>
          <a href="/sshkeys/<%= keys[i].name %>/del" ><%- $('删除') %></a>
    </li>
    <% } %>
  </ul>
