</nav>
<div style='float:left;padding:30px 10px'>
<img src='/images/portal_banner-chn.jpg'></img>
</div>
<div style='padding:30px 10px'>
<%- msg()%>
<form method='post' onsubmit='return false' id='login'>
	<input type="text" name="login"
		placeholder='账号'
		title ='账号'
		required
		style='margin:5px'
		oninput='checkForm1(this)'/><br/>
	<input type="password" name="password"
		placeholder='注意密码安全！'
		title ='密码'
		required
		style='margin:5px'
		oninput='checkForm1(this)'/><br/>
	<input type="submit" onclick='checkForm(this,"login")' value="登录"
		style='margin:5px'/>
 &nbsp; &nbsp; &nbsp; &nbsp; <a href='#'>忘记密码？</a><br/>
</form>
<form onsubmit='return false'>
	<input type="text" name="identifier"
		placeholder='用户名或邮箱'
		title ='用户名或邮箱'
		required
		style='margin:5px'/>
	<input type="submit" onclick='checkForm(this,"reset")' value="找回密码"
		style='margin:5px'/><br/>
</form>

<form onsubmit='return false'>
<fieldset>
<legend>请填写注册信息</legend>
<input type="email" id="email" name="email_address" 
	pattern='^\w+(\.\w+)*@(\w)+(\.\w+)*.(\w){2,4}$' 
	placeholder='邮箱' 
	title ='字母数字下划线开头'
	required
		style='margin:5px'/><br/>
<input type="text" id="account" name='login' 
	placeholder='账号'
	required
		style='margin:5px'/><br/>
<input type="password" id="password" name='password' 
	placeholder='密码'
	required
		style='margin:5px'/><br/>
<input type="password" id="passwordConfirm" name='password_confirmation' 
	placeholder='确认密码'
	required
		style='margin:5px'/><br/>
<input type="text" name='promotion_code' 
	placeholder='(可选项)推广码'
		style='margin:5px'/><br/>
</fieldset>
<input type="checkbox" id='agreement' title ='您必须同意此协议' required>
<label for='agreement'>我接受</label><a href='#' onclick='locking()'>服务条款</a>
 &nbsp; &nbsp; &nbsp; &nbsp; <input type="submit" onclick='checkForm(this,"signup")' value="注册"/>
</form>
</div>
<div id="lay"style="FILTER: alpha(opacity=0);opacity:.5;background-color: #777;z-index: 10;display: none;position:fixed;left: 0px; top: 0px; width:100%; height:100%;"></div>
<div id="box"style="background-color: #fff;z-index: 11;display: none;position:fixed;left:25%;top:25%;width:800px;height:500px;text-align:center">
	<iframe width=99.5% height=89% src='<%-$("agreement.html")%>'></iframe><br>
	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button style='width:10%;height:8%;' onclick='unLock()'>关闭</button>
</div>
<script>
function locking(){
	document.all.lay.style.display="block";
	document.all.box.style.display='block';
}
function unLock(){
  document.all.lay.style.display='none';
  document.all.box.style.display='none';
}
</script>
