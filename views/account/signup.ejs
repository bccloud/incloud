<%- include ../header %>
<form id='form' method='post'>
<fieldset>
<legend>请填写注册信息</legend>
<label for='email'>邮&nbsp;&nbsp;&nbsp;&nbsp;箱</label>
<input type="email" id="email" name="email_address" pattern='^\w+(\.\w+)*@(\w)+(\.\w+)*.(\w){2,4}$' placeholder='字母数字下划线开头' title ='字母数字下划线开头' oninput='reValidity(this)' required/>
<br />
<label for='account'>用&nbsp;户&nbsp名</label>
<input type="text" id="account" name='login' oninput='reValidity(this)' required/>
<br />
<label for='password'>密&nbsp;&nbsp;&nbsp;&nbsp;码 </label>
<input type="password" id="password" name='password' placeholder='注意密码安全！' oninput='reValidity(this)' required/>
<br />
<label for='passwordConfirm'>确认密码 </label>
<input type="password" id="passwordConfirm" name='password_confirmation' placeholder='注意密码安全！' oninput='reValidity(this)' required/>
<br />
<label for='name'>真实姓名</label>
<input type="text" id="name" name='real_name' oninput='reValidity(this)'/>
<br />
<label for='phone'>电话号码</label>
<input type="tel" id="phone" name='phone_number' oninput='reValidity(this)'/>
</fieldset>
<input type="checkbox" id='agreement' title ='您必须同意此协议' required>
<label for='agreement'>我已阅读并同意</label><a href='#' onclick='locking()'>相关服务条款</a>
<br>
<input id='check' type="submit" value="注册"/>
</form>
<div id="lay"style="FILTER: alpha(opacity=0);opacity:.5;background-color: #777;z-index: 10;display: none;position:fixed;left: 0px; top: 0px; width:100%; height:100%;"></div>
<div id="box"style="background-color: #fff;z-index: 11;display: none;position:fixed;left:25%;top:25%;width:800px;height:500px;text-align:center">
	<iframe width=99.5% height=89% src='agreement.html'></iframe><br>
	&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button style='width:10%;height:8%;' onclick='unLock()'>关闭</button>
</div>	
<script>
function locking(){
	document.all.lay.style.display="block";
	document.all.box.style.display='block';
}
function unLock(){
  document.all.lay.style.display='none';
  document.all.box.style.display='none';
}
function validity(data,obj){
	if(data.txt!=11){
		obj.setCustomValidity("确认")
	}
}
</script>
<%- include ../footer %>